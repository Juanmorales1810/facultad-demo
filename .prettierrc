{
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5",
    "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": "*.astro",
            "options": { "parser": "astro" }
        }
    ],
    "tailwindFunctions": ["cva", "cn", "clsx", "tv"]
}
