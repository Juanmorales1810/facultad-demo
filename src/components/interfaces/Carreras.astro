---
import { Orbit, Code, Leaf } from 'lucide-react';

const carreras = [
    {
        icon: Orbit,
        title: 'Ciencias del Espacio y Física',
        description:
            'Explora el universo, la estructura de la Tierra y las leyes fundamentales de la naturaleza.',
        items: [
            {
                nombre: 'LIC. EN ASTRONOMÍA',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2022/08/Astronomia.pdf',
            },
            {
                nombre: 'LIC. EN GEOFÍSICA',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2022/08/Geofisica.pdf',
            },
            {
                nombre: 'LIC. EN FÍSICA',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2022/08/Fisica.pdf',
            },
        ],
    },
    {
        icon: Leaf,
        title: 'Ciencias Naturales',
        description:
            'Estudia la vida, los ecosistemas y la formación geológica de nuestro planeta.',
        items: [
            {
                nombre: 'LIC. EN BIOLOGÍA',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2023/06/Biologia-2023-1.pdf',
            },
            {
                nombre: 'LIC. EN CIENCIAS GEOLÓGICAS',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2023/07/Geologia-2023.pdf',
            },
        ],
    },
    {
        icon: Code,
        title: 'Ciencias de la Computación',
        description:
            'Domina la tecnología, desarrolla software y crea soluciones digitales innovadoras.',
        items: [
            {
                nombre: 'LIC. EN CIENCIAS DE LA COMPUTACIÓN',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2023/07/Computacion-2023-2.pdf',
            },
            {
                nombre: 'LIC. EN SISTEMAS DE INFORMACIÓN',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2023/07/Informacion-2023-2.pdf',
            },
            {
                nombre: 'TEC. UNIVERSITARIA EN PROGRAMACIÓN WEB',
                url: 'https://exactas.unsj.edu.ar/wp-content/uploads/2023/05/Web-2023-2.pdf',
            },
        ],
    },
];
---

<section class="py-32">
    <div class="container mx-auto px-4">
        <div class="mx-auto max-w-4xl space-y-16">
            <div class="space-y-4 text-center">
                <h2 class="text-3xl font-semibold tracking-tight md:text-4xl">
                    ¿Qué carreras puedo cursar?
                </h2>
                <p
                    class="text-muted-foreground mx-auto max-w-2xl text-lg tracking-tight md:text-xl">
                    Descubre nuestra amplia oferta académica en ciencias exactas, físicas y
                    naturales
                </p>
            </div>

            <div class="space-y-6">
                {
                    carreras.map((carrera, index) => (
                        <div class="border-border hover:border-primary/50 flex flex-col items-start gap-6 rounded-lg border p-6 transition-all hover:shadow-md md:flex-row">
                            <div class="flex-shrink-0">
                                <div class="bg-primary/10 text-primary flex h-12 w-12 items-center justify-center rounded-lg">
                                    <carrera.icon className="h-6 w-6" />
                                </div>
                            </div>
                            <div class="flex-1 space-y-3">
                                <h3 class="text-xl font-semibold">{carrera.title}</h3>
                                <p class="text-muted-foreground leading-relaxed">
                                    {carrera.description}
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    {carrera.items.map((item, itemIndex) => (
                                        <a
                                            href={item.url}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="bg-secondary hover:bg-primary/10 hover:text-primary group inline-flex items-center gap-1.5 rounded-full px-3 py-1 text-xs font-medium transition-colors">
                                            {item.nombre}
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                class="size-3 opacity-0 transition-opacity group-hover:opacity-100"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2">
                                                <path d="M7 7h10v10" />
                                                <path d="M7 17L17 7" />
                                            </svg>
                                        </a>
                                    ))}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
